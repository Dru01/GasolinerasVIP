<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GasolinerasVIP.Views.PaymentPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="30, 10, 30, 10">
                <Label Text="Selecciona tu Metodo de Pago" FontSize="40" TextColor="Black" HorizontalTextAlignment="Center" />
                <StackLayout x:Name="CardStackLayout">
                    <Button Text="Tarjeta con terminal" FontSize="20" ContentLayout="Left,5" ImageSource="CreditCard.png" HorizontalOptions="FillAndExpand" CornerRadius="10" Clicked="CardPaymentClicked"/>
                </StackLayout>
                <StackLayout x:Name="CashStack">
                    <Button Text="Pago en efectivo" FontSize="20" ContentLayout="Left,5" ImageSource="cash.png" HorizontalOptions="FillAndExpand" CornerRadius="10" Clicked="CashPaymentClicked"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>